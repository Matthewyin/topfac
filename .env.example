# TopFac 本地版环境变量配置模板
# 复制此文件为 .env 并根据需要修改配置

# ===========================================
# 服务器配置
# ===========================================

# 服务器端口 (默认: 3000, Docker映射: 30010)
PORT=3000

# 运行环境 (development | production)
NODE_ENV=development

# 服务器主机地址
HOST=0.0.0.0

# ===========================================
# 数据存储配置
# ===========================================

# 数据目录路径 (相对于项目根目录)
DATA_DIR=./data

# 备份目录路径
BACKUP_DIR=./data/backups

# 自动备份间隔 (小时)
BACKUP_INTERVAL=24

# 是否启用自动备份
BACKUP_ENABLED=true

# 保留备份文件数量
BACKUP_RETENTION=7

# ===========================================
# 日志配置
# ===========================================

# 日志级别 (error | warn | info | debug)
LOG_LEVEL=info

# 日志目录路径
LOG_DIR=./logs

# 是否启用访问日志
ACCESS_LOG_ENABLED=true

# 是否启用错误日志
ERROR_LOG_ENABLED=true

# ===========================================
# 安全配置
# ===========================================

# CORS 允许的源 (逗号分隔)
CORS_ORIGINS=http://localhost:3000,http://localhost:30010,http://127.0.0.1:3000,http://127.0.0.1:30010

# API 请求速率限制 (每分钟请求数)
RATE_LIMIT=100

# 文件上传大小限制 (MB)
UPLOAD_LIMIT=10

# ===========================================
# AI 服务配置 (可选)
# ===========================================

# 默认 AI 提供商 (gemini | deepseek | openai)
DEFAULT_AI_PROVIDER=gemini

# AI API 超时时间 (秒)
AI_TIMEOUT=30

# AI API 重试次数
AI_RETRY_COUNT=3

# ===========================================
# 缓存配置
# ===========================================

# 是否启用内存缓存
CACHE_ENABLED=true

# 缓存过期时间 (秒)
CACHE_TTL=300

# 最大缓存条目数
CACHE_MAX_SIZE=1000

# ===========================================
# 开发配置
# ===========================================

# 是否启用调试模式
DEBUG=false

# 是否启用热重载
HOT_RELOAD=true

# 前端开发服务器端口
CLIENT_DEV_PORT=3001
